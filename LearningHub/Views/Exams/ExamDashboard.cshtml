@model LearningHub.ViewModel.StudentDashboardVM

@{
    ViewBag.Title = "Videos";
    Layout = "~/Views/Shared/Student/_StudentBase.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Exam Dashboard
            <small>All Exams are Listed Here</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Exam</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- =========================================================== -->
        <div class="alert alert-danger alert-dismissible" @if (Html.ViewData.ModelState.IsValidField("ErroMessage")) { <text> style="display:none" </text> }>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            @Html.ValidationMessage("ErroMessage")
        </div>
        @foreach (var item in Model.subjectTbls)
        {

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-warning box-solid collapsed-box">
                        <div class="box-header with-border">
                            <h3 class="box-title">@Html.DisplayFor(modelItem => item.SubjectName)</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            @foreach (var item2 in item.ExamTbls)
                            {
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                    <div class="info-box bg-red">
                                        <span class="info-box-icon"><i class="fa fa-calendar"></i></span>
                                        @using (Html.BeginForm("Index", "Exams", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            @Html.Hidden("ExamID", item2.ExamID)
                                            <div class="info-box-content">
                                                <span class="info-box-text">------------------------------------------------------------</span>
                                                <span class="info-box-number text-center"><input class="btn bg-black" type="submit" value="Attend Exam" /></span>
                                                <span class="info-box-text">------------------------------------------------------------</span>
                                            </div>
                                        }
                                        <!-- /.info-box-content -->
                                    </div>
                                    <!-- /.info-box -->
                                </div>
                            }
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
            <!-- /.row -->
        }
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
