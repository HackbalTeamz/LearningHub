@model LearningHub.ViewModel.StudentDashboardVM
    @{
        ViewBag.Title = "FinishExam";
        Layout = "~/Views/Shared/Student/_StudentBase.cshtml";
    }
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Exam 
                <small>Final Result</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Exam</li>
                <li class="active">Result</li>
            </ol>
        </section>
        <section class="content">
            

                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Finish Exam</h3>
                    </div>
                    <div class="box-body">
                        <div class="box-body table-responsive no-padding">


                            <div class="alert alert-info alert-dismissible">

                                <h4><i class="icon fa fa-thumbs-o-up"></i> Attended: @Model.onlineExamVM.studentExamTbl.TotalAttendQuestion</h4>
                                <h4><i class="icon fa fa-thumbs-o-up"></i> Correct: @Model.onlineExamVM.studentExamTbl.TotalCurrectAnwer</h4>
                                <h4><i class="icon fa fa-thumbs-o-down"></i> Wrong: @Model.onlineExamVM.studentExamTbl.TotalWrongAnswer</h4>
                            </div>








                            @*<div class="callout callout-info">*@



                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="box">
                                        <div class="box-header">
                                            <h3 class="box-title">Final Result</h3>
                                            <div class="box-tools">
                                                <div class="input-group input-group-sm" style="width: 150px;">
                                                   
                                                    <div class="input-group-btn">
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.box-header -->
                                        <div class="box-body table-responsive no-padding">
                                            <table class="table table-hover">
                                           
                                                @foreach (var item in Model.onlineExamVM.studentExamResultTbl)
                                                {
                                                    if (Convert.ToBoolean(item.IsTrue))
                                                    {
                                                        <tr>
                                                            <th>@item.ExamQuestionTbl.Question</th>
                                                            <th> @item.SelectedAnswer</th>
                                                            <th> <span class="label label-success"> Correct </span></th>

                                                        </tr>


                                                    }
                                                    else if (item.IsTrue == false)
                                                    {

                                                        <tr>
                                                            <th>@item.ExamQuestionTbl.Question</th>
                                                            <th>@item.SelectedAnswer </th>
                                                            <th><span class="label label-danger"> Wrong </span></th>

                                                        </tr>
                                                     
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <th>@item.ExamQuestionTbl.Question</th>
                                                            <th>Not Attended</th>
                                                            <th><span class="label label-warning"> Not Attended </span></th>

                                                        </tr>
                                                     
                                                    }

                                                }
                                            </table>
                                        </div>
                                        <!-- /.box-body -->
                                    </div>
                                    <!-- /.box -->
                                </div>
                            </div>

                            @* </div>*@
                        </div>
                        </div>
                    </div>
            </section>
</div>