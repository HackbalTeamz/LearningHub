@model LearningHub.Models.RegistrationVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Staff/_StaffBase.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Student
            <small>Edit Student</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Student</a></li>
            <li class="active">Edit Student</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit Student</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->

                    @using (Html.BeginForm("Edit", "StudentTbls", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()



                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.student.StudentID)
                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.student.ClassID)

                                @Html.DropDownList("student.ClassID", (SelectList)ViewBag.ClassID, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.student.ClassID, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.student.ParentID)

                                @Html.DropDownList("student.ParentID", (SelectList)ViewBag.ParentID, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.student.ParentID, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.student.StudentName)

                                @Html.EditorFor(model => model.student.StudentName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.student.StudentName, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.student.Mobile)

                                @Html.EditorFor(model => model.student.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.student.Mobile, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.cred.UserName)

                                @Html.EditorFor(model => model.cred.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.cred.UserName, "", new { @class = "text-danger" })

                            </div>
                        </div>


                        <div class="box-footer">
                            <button type="submit" value="Create" class="btn bg-purple">Submit</button>

                        </div>

                    }
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts
{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}



