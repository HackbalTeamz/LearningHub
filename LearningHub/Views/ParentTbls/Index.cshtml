@model IEnumerable<LearningHub.Models.ParentTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Staff/_StaffBase.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Parents
            <small>Parents List</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Parent List</a></li>

        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">

                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped" id="dataTable" role="grid" width="100%" cellspacing="0">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.ParentName)</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.Mobile)</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.EnteredOn)</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.UpdatedOn)</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.CredentialTbl.UserName)</th>
                                            <th rowspan="1" colspan="1">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr role="row">
                                                <td class="sorting_1">
                                                    @Html.DisplayFor(modelItem => item.ParentName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Mobile)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EnteredOn)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UpdatedOn)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CredentialTbl.UserName)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.ParentID }) |
                                                    @*@Html.ActionLink("Details", "Details", new { id = item.ParentID }) |*@
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.ParentID })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.ParentName)</th>
                                            <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.Mobile)</th>
                                            <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.EnteredOn)</th>
                                            <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.UpdatedOn)</th>
                                            <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.CredentialTbl.UserName)</th>
                                            <th rowspan="1" colspan="1">Delete</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>
@section Scripts
{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "pageLength": 20,
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': true
            })
        })</script>
    }
