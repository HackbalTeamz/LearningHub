@model LearningHub.ViewModel.StudentDashboardVM

@{
    ViewBag.Title = "Videos";
    Layout = "~/Views/Shared/Student/_StudentBase.cshtml";
}

<div class="content-wrapper" style="min-height: 1046px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Live Class
            <small>Interact with Teachers</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Video</a></li>
            <li class="active">Live</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <!-- The time line -->
                <ul class="timeline">

                    <!-- timeline item -->
                    <li>
                        <i class="fa fa-video-camera bg-maroon"></i>

                        <div class="timeline-item">
                            <span class="time"><i class="fa fa-clock-o"></i> Live </span>

                            <h3 class="timeline-header"><a href="#">Admin</a> Live streaming</h3>

                            <div class="timeline-body">
                                <div class="embed-responsive embed-responsive-16by9">
                                    <object class="embed-responsive-item" type="text/html" data="https://us04web.zoom.us/wc/join/6124782607?pwd=L2p6ak0wWjl4Qm5oYjFyQ2dUdjNBUT09"></object>
                                </div>
                            </div>
                            <div class="timeline-footer">
                                @*<a href="#" class="btn btn-xs bg-maroon">See comments</a>*@
                            </div>
                        </div>
                    </li>
                    <!-- END timeline item -->
                    <li>
                        <i class="fa fa-clock-o bg-gray"></i>
                    </li>
                </ul>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->


    </section>
    <!-- /.content -->
</div>