
@model LearningHub.ViewModel.StudentDashboardVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Student/_StudentBase.cshtml";
}
<div class="content-wrapper" style="min-height: 1046px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Classroom
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Video</a></li>
            <li class="active">Live</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <!-- The time line -->
                <ul class="timeline">

                    <!-- timeline item -->
                    @foreach (var item in Model.videoTbls)
                    {
                        <li>
                            <i class="fa fa-video-camera bg-maroon"></i>

                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o"></i> Live </span>

                                <h3 class="timeline-header"><a href="#">@Html.DisplayFor(model => item.VideoTitle)</a> Video Class</h3>

                                <div class="timeline-body">
                                    <div class="embed-responsive embed-responsive-16by9">
                                        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/@item.VideoLink" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                    </div>
                                </div>
                                <div class="timeline-footer">
                                    <a href="https://www.youtube.com/watch?v=@item.VideoLink" class="btn btn-xs bg-maroon">Watch On Youtube</a>
                                </div>
                            </div>
                        </li>
                    }
                    <!-- END timeline item -->
                    <li>
                        <i class="fa fa-clock-o bg-gray"></i>
                    </li>
                </ul>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->


    </section>
    <!-- /.content -->
</div>

<span class="skype-button bubble" data-color="#2e55c7" data-text="Live Intraction" data-contact-id="abdullasirajudeen"></span>
<span class="skype-chat" data-color-message="#0078D4"></span>
<script src="https://swc.cdn.skype.com/sdk/v1/sdk.min.js"></script>